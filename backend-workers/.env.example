# Cloudflare Workers Environment Variables
# Copy this file to .dev.vars for local development

# Database connection (via Hyperdrive in production)
DATABASE_URL=postgresql://user:password@host:5432/database

# Anthropic API key for Claude
ANTHROPIC_API_KEY=sk-ant-xxx

# JWT secret for token signing
JWT_SECRET=your-secret-key-here

# Encryption key for sensitive data
ENCRYPTION_KEY=your-encryption-key-here

# Frontend URL for magic link redirects
FRONTEND_URL=http://localhost:3000

# Resend API key for sending emails
RESEND_API_KEY=your_resend_api_key_here

# From email address for outgoing emails
FROM_EMAIL=noreply@dealinsights.ai
